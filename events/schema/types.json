{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Usage period",
  "type": "object",
  "definitions": {
    "period": {
      "type": "object",
      "properties": {
        "from": {
          "description": "Start of the period",
          "$ref": "types/date-time.json"
        },
        "to": {
          "description": "End of the period",
          "$ref": "types/date-time.json"
        }
      },
      "required": [
        "from",
        "to"
      ]
    },
    "ulid": {
      "type": "string",
      "pattern": "^[0-9A-HJ-NP-Y]{26}$"
    }
  }
}
